<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.scu.klnguyen.simpletodo.AddItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Task Name"
        android:id="@+id/name1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter task name here..."
        android:inputType="textAutoComplete"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/name2"
        android:layout_alignBaseline="@+id/name1"
        android:layout_toRightOf="@+id/name1"
        android:layout_toEndOf="@+id/name1"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Due Date"
        android:id="@+id/date1"
        android:layout_below="@+id/name2"
        android:layout_alignLeft="@+id/name1"
        android:layout_alignStart="@+id/name1"
        android:layout_marginTop="32dp" />
    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date2"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_alignLeft="@+id/name2"
        android:layout_alignStart="@+id/name2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Task Notes"
        android:id="@+id/note1"
        android:layout_below="@+id/date2"
        android:layout_alignLeft="@+id/date1"
        android:layout_alignStart="@+id/date1"
        android:layout_marginTop="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter notes for task here..."
        android:inputType="textAutoComplete"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/note2"
        android:layout_alignBaseline="@+id/note1"
        android:layout_alignLeft="@+id/date2"
        android:layout_alignStart="@+id/date2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Priority Level"
        android:id="@+id/level1"
        android:layout_below="@+id/note2"
        android:layout_alignLeft="@+id/note1"
        android:layout_alignStart="@+id/note1"
        android:layout_marginTop="32dp" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBaseline="@+id/level1"
        android:layout_alignLeft="@+id/note2"
        android:layout_alignStart="@+id/note2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Status"
        android:id="@+id/status1"
        android:layout_below="@+id/level2"
        android:layout_alignLeft="@+id/level1"
        android:layout_alignStart="@+id/level1"
        android:layout_marginTop="32dp" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBaseline="@+id/status1"
        android:layout_alignLeft="@+id/level2"
        android:layout_alignStart="@+id/level2" />

</RelativeLayout>
